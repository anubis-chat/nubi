# ============================================
# ANUBIS AGENT - COMPLETE ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and configure as needed
# Required fields are marked with [REQUIRED]
# At minimum, you need ONE model provider API key

# ============================================
# 1. MODEL PROVIDERS
# ============================================
# [REQUIRED - At least ONE model provider]

# OpenAI (Recommended - supports both text and embeddings)
OPENAI_API_KEY=
# OPENAI_BASE_URL=https://api.openai.com/v1  # Override for custom endpoints

# Anthropic (Claude models - excellent reasoning)
ANTHROPIC_API_KEY=

# OpenRouter (Access to multiple models with one key)
OPENROUTER_API_KEY=

# Google Generative AI (Gemini models)
GOOGLE_GENERATIVE_AI_API_KEY=

# Groq (Fast inference with open models)
GROQ_API_KEY=

# Ollama (Local models - no API key needed)
OLLAMA_API_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_SMALL_MODEL=llama3.2-1b
OLLAMA_MEDIUM_MODEL=llama3.2-3b
OLLAMA_LARGE_MODEL=llama3.2-70b
USE_OLLAMA_TEXT_MODELS=false
USE_OLLAMA_EMBEDDING=false

# StudioLM (Local AI server)
USE_LOCAL_AI=false
USE_STUDIOLM_TEXT_MODELS=false
STUDIOLM_SERVER_URL=http://localhost:8080
STUDIOLM_SMALL_MODEL=llama-3.2-1b
STUDIOLM_MEDIUM_MODEL=llama-3.2-3b
STUDIOLM_EMBEDDING_MODEL=all-minilm

# Cloudflare AI Gateway
CLOUDFLARE_GW_ENABLED=false
CLOUDFLARE_AI_ACCOUNT_ID=
CLOUDFLARE_AI_GATEWAY_ID=

# ============================================
# 2. DATABASE CONFIGURATION
# ============================================

# PostgreSQL (Recommended for production)
# POSTGRES_URL=postgresql://user:password@localhost:5432/anubis_db

# SQLite (Default for development)
DATABASE_URL=sqlite://./data/db.sqlite

# PGLite (Local PostgreSQL alternative)
# PGLITE_DATA_DIR=/path/to/pglite/data

# ============================================
# 3. COMMUNICATION PLATFORMS
# ============================================

# --- Twitter/X Integration ---
TWITTER_USERNAME=
TWITTER_PASSWORD=
TWITTER_EMAIL=

# Twitter API v2 (Optional - for advanced features)
TWITTER_API_KEY=
TWITTER_API_SECRET_KEY=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Twitter Behavior Settings
TWITTER_ENABLE_POST_GENERATION=false
TWITTER_POST_IMMEDIATELY=false
TWITTER_INTERACTION_ENABLE=true
TWITTER_TIMELINE_ENABLE=true
TWITTER_SPACES_ENABLE=false
TWITTER_TIMELINE_MODE=adaptive  # adaptive|focused|broad
TWITTER_TIMELINE_POLL_INTERVAL=300000  # milliseconds

# --- Discord Integration ---
DISCORD_APPLICATION_ID=
DISCORD_API_TOKEN=

# --- Telegram Integration ---
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHANNEL_ID=@YourChannelName
TELEGRAM_TEST_CHANNEL=@TestChannel

# ============================================
# 4. BLOCKCHAIN & CRYPTO APIS
# ============================================

# Solana Configuration
SOLANA_PUBLIC_KEY=
SOLANA_PRIVATE_KEY=
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# EVM Configuration (Ethereum, Base, Arbitrum, etc.)
EVM_PRIVATE_KEY=
EVM_CHAINS=mainnet,sepolia,base,arbitrum,polygon
EVM_PROVIDER_URL=

# Crypto Data APIs
BIRDEYE_API_KEY=         # Solana token analytics
JUPITER_API_KEY=         # Jupiter DEX aggregator
HELIUS_API_KEY=          # Solana RPC & webhooks
COINMARKETCAP_API_KEY=   # Price data
COINGECKO_API_KEY=       # Market data
ZEROEX_API_KEY=          # 0x DEX aggregation

# ============================================
# 5. ANUBIS-SPECIFIC SETTINGS
# ============================================

# --- Personality Tuning ---
ANUBIS_TYPO_RATE=0.03                    # Probability of typos (0-1)
ANUBIS_CONTRADICTION_RATE=0.15           # Probability of contradictions (0-1)
ANUBIS_EMOTIONAL_PERSISTENCE=1800000     # Emotion duration in ms (30 min default)
ANUBIS_HUMANIZATION_LEVEL=high           # low|medium|high
ANUBIS_PATTERN_VARIATION=true            # Enable response pattern variation
ANUBIS_MEMORY_DECAY=0.95                 # Memory importance decay rate
ANUBIS_PERSONALITY_DRIFT=true            # Allow personality to evolve

# --- Response Timing ---
ANUBIS_INSTANT_RESPONSE_RATE=0.1         # 10% instant (<1s)
ANUBIS_QUICK_RESPONSE_RATE=0.3           # 30% quick (1-5s)
ANUBIS_NORMAL_RESPONSE_RATE=0.4          # 40% normal (5-30s)
ANUBIS_DELAYED_RESPONSE_RATE=0.15        # 15% delayed (30s-2m)
ANUBIS_VERY_DELAYED_RESPONSE_RATE=0.05   # 5% very delayed (2-5m)

# --- Raid Bot Configuration ---
RAID_AUTO_POST=false                     # Auto-post raid tweets
RAID_AUTO_CREATE=false                   # Auto-create raid sessions
RAID_POST_INTERVAL_HOURS=4               # Hours between auto-posts
RAID_DURATION_MINUTES=30                 # Default raid duration
RAID_TEST_MODE=false                     # Use test channels
RAID_MIN_PARTICIPANTS=10                 # Minimum to start raid
RAID_MAX_CONCURRENT=3                    # Max simultaneous raids

# --- Content Generation ---
ANUBIS_VIRAL_CONTENT_ENABLED=true        # Enable viral content patterns
ANUBIS_HOT_TAKE_PROBABILITY=0.2          # Chance of hot takes
ANUBIS_THREAD_GENERATION=true            # Generate Twitter threads
ANUBIS_MEME_RESPONSE_ENABLED=true        # Respond with memes

# ============================================
# 6. LOGGING & MONITORING
# ============================================

# Logging Level
LOG_LEVEL=info  # fatal|error|warn|info|debug|trace

# Sentry Error Tracking
SENTRY_LOGGING=false
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_SEND_DEFAULT_PII=false

# ============================================
# 7. ADVANCED INTEGRATIONS
# ============================================

# MCP Server (Model Context Protocol)
MCP_SERVER_URI=

# AI Gateway
AI_GATEWAY_URL=

# Webhook Configuration
WEBHOOK_URL=
WEBHOOK_SECRET=

# External Service APIs
NEWS_API_KEY=
WEATHER_API_KEY=

# ============================================
# 8. MULTI-AGENT CONFIGURATION
# ============================================
# For running multiple agents, prefix variables with agent name
# Example: COMMUNITY_MANAGER_DISCORD_API_TOKEN=token1

# Community Manager Agent
# COMMUNITY_MANAGER_DISCORD_APPLICATION_ID=
# COMMUNITY_MANAGER_DISCORD_API_TOKEN=
# COMMUNITY_MANAGER_TELEGRAM_BOT_TOKEN=

# Trading Agent
# TRADING_AGENT_SOLANA_PRIVATE_KEY=
# TRADING_AGENT_JUPITER_API_KEY=
# TRADING_AGENT_RISK_LEVEL=conservative

# Content Creator Agent
# CONTENT_CREATOR_TWITTER_USERNAME=
# CONTENT_CREATOR_TWITTER_PASSWORD=
# CONTENT_CREATOR_POST_FREQUENCY=high

# ============================================
# 9. DEVELOPMENT & TESTING
# ============================================

# Development Mode
NODE_ENV=development  # development|production|test

# Testing Configuration
TEST_MODE=false
MOCK_API_RESPONSES=false
DISABLE_EXTERNAL_APIS=false

# Performance
MAX_MEMORY_MB=4096
WORKER_THREADS=4
CACHE_TTL_SECONDS=3600

# ============================================
# QUICK START EXAMPLES
# ============================================

# MINIMAL SETUP (Just chatbot):
# OPENAI_API_KEY=sk-your-key

# TWITTER BOT:
# OPENAI_API_KEY=sk-your-key
# TWITTER_USERNAME=your-username
# TWITTER_PASSWORD=your-password

# RAID COORDINATOR:
# OPENAI_API_KEY=sk-your-key
# TELEGRAM_BOT_TOKEN=your-bot-token
# TWITTER_API_KEY=your-api-key
# RAID_AUTO_CREATE=true

# FULL PRODUCTION:
# Copy all sections and fill in your values

